// prsma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
model Machine {
  id          Int      @id @default(autoincrement())
  slug        String   @unique
  model       String
  price       String   // Change from Int to String
  image       String
  description String
  category    String
  specs       Json

   @@map("machines")
}

model Category {
  id   Int    @id @default(autoincrement())
  name String @unique
} 
// prisma/schema.prisma
model Order {
  id          String   @id @default(uuid())
  userId      String
  items       Json
  total       Float
  createdAt   DateTime @default(now())
}